<Window x:Class="PandoraApp.ConfigGenerator"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PandoraApp"
        mc:Ignorable="d"
        Title="Config Generator" Height="140" Width="220">
    <Grid>
        <StackPanel Orientation="Vertical" Margin="0 0 0 0">
            <StackPanel Orientation="Horizontal" Margin="15 15 0 0">
                <Label Width="75">Username:</Label>
                <TextBox Width="100" Height="20"  Name="Username"></TextBox>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="15 0 0 0">
                <Label Width="75">Password:</Label>
                <PasswordBox Width="100" Height="20"  Name="Password"></PasswordBox>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Width="75" Margin="0 10 0 0">
                <Button Click="ConfigGenerator_Click" Width="75">Generate</Button>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
